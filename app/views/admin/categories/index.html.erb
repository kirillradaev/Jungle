

<section class="admin-categories-index">

  <header class="page-header">
    <h1>All Categories</h1>
  </header>

  <div>
    <% @categories.each do |category| %>
      <%= render 'category', category: category %>
    <% end %>
  </div>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

</section>
